!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    /[if lt IE 9]
      %script(src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript")
    %title= content_for?(:title) ? yield(:title) : "Riderstate Prelaunch Signup"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body{:style => 'padding-top:0px;'}
    %header.navbar.navbar-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              .row
                -#- if (@current_user.has_role? :admin_group and @current_user.club_id.nil?)
                  -#= link_to 'Create club', new_club_path, :method => :get, :class => 'btn btn-large' 
                -#- else
                  -#= link_to 'My tracks', user_tracks_path(@current_user), :method => :get, :class => 'btn btn-large'
                  -#= link_to 'New track', new_user_track_path(@current_user), :method => :get, :class => 'btn btn-large'
                  -#= link_to 'Ranking tracks', users_path, :method => :get, :class => 'btn btn-large'
                  -#= link_to 'My profile', edit_user_registration_path, :method => :get, :class => 'btn btn-large'
                  -#- if @current_user.club_id
                    -#= link_to 'Club info', viewclub_path, :method => :get, :class => 'btn btn-large'
                = link_to 'Create event', new_event_path({:from => 'club'}), :method => :get, :class => 'btn btn-large'
                -#= render 'layouts/messages'
                = yield
    %footer
      = render 'layouts/footer'
